version: "3.9"

services:
  user-service:
    build: ./user-service
    container_name: user_service
    environment:
      DB_URL: jdbc:mysql://db:3306/userdb
    networks: backend

  order-service:
    build: ./order-service
    container_name: order_service
    environment:
      DB_URL: jdbc:mysql://db:3306/orderdb
    networks:
      - backend

  db:
    image: mysql:8
    container_name: mysql_database
    environment:
      MYSQL_ROOT_PASSWORD: root
      MYSQL_DATABASE: main
    volumes:
      - db_volume:/var/lib/mysql
    networks:
      - backend

  nginx:
    image: nginx:latest
    container_name: reverse_proxy
    ports:
      - "80:80"
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf
    depends_on:
      - user-service
      - order-service
    networks:
      - frontend
      - backend

networks:
  backend:
  frontend:

volumes:
  db_volume: 
  #this is sameple code for docker compose with multiple services for future reference
